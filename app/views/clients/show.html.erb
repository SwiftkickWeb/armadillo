<div class="card-header"> 
  <h1><%= @client.name %></h1>
  <div class="card-nav">
    <%= link_to edit_client_path(@client), :class => "btn btn-secondary" do  %>
      <span class="fas fa-edit"></span> Edit this client
    <% end %> 
    <%= link_to clients_path, :class => "btn btn-secondary" do  %>
      <span class="fas fa-arrow-left"></span> Back to Clients
    <% end %> 
  </div>
</div>

<div class="card-body">
  <h2>Details</h2>
  <h3>Address:</h3>
  <p><%= @client.address.empty? ? "None entered" : @client.address %></p>
  <h3>Properties</h3>
  <ul class="web-properties list-group">
  <% @client.web_properties.each do |web_property| %>
    <li class="list-group-item">
      <% web_property.name %>:
      <% link_to web_property.url, web_property.url %>
      <%= link_to edit_client_web_property_path(@client), class: 'btn btn-secondary btn-sm' do %>
        <i class='fas fa-edit'></i> Edit
      <% end %>
      <%= button_to edit_client_web_property_path(web_property), 
        method: :delete, 
        form:{ 
          data: { turbo_confirm: "Are you sure you want to delete this client?"  }
        },
        class: 'btn btn-secondary btn-sm' do
      %>
        <i class='fas fa-delete'></i> Delete
      <% end %>
    </li>
  <% end %>
  </ul>
  <%= link_to "Add new property", new_client_web_property_url(@client) %>
  <h2>Admin</h2>
  <%= link_to "Edit this client", edit_client_path(@client) %>
  <%= button_to "Destroy this client", @client, 
    method: :delete, 
    form:{ 
      data: { turbo_confirm: "Are you sure you want to delete this client?"  }
    }
  %>
<div>

